<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="@dimen/layout_padding"
    android:paddingLeft="@dimen/layout_padding"
    android:paddingRight="@dimen/layout_padding"
    tools:context=".activities.dashboard.new_tile.NewTileActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/config_new_tile_banner0"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/config_new_tile_banner1"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tileType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/gray"
            android:textSize="20sp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/config_new_tile_height_warning"
                android:textColor="#555555"
                android:textSize="15sp"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/config_new_tile_slider_width"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/width"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:stepSize="1"
                    android:valueFrom="0.0"
                    android:valueTo="100.0"

                    app:thumbColor="@color/slider_thumbColor"
                    app:tickColorActive="@color/slider_tickColorActive"
                    app:tickColorInactive="@color/slider_tickColorInactive"
                    app:trackColorActive="@color/slider_trackColorActive"
                    app:trackColorInactive="@color/slider_trackColorInactive" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/config_new_tile_slider_height"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <com.google.android.material.slider.Slider
                    android:id="@+id/height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:stepSize="1"
                    android:valueFrom="0.0"
                    android:valueTo="100.0"

                    app:thumbColor="@color/slider_thumbColor"
                    app:tickColorActive="@color/slider_tickColorActive"
                    app:tickColorInactive="@color/slider_tickColorInactive"
                    app:trackColorActive="@color/slider_trackColorActive"
                    app:trackColorInactive="@color/slider_trackColorInactive" />

            </LinearLayout>

            <Button
                android:id="@+id/push"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/config_new_tile_button_add" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>