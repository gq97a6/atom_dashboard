<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/touch"
            style="@style/defaultButton"
            android:layout_width="64.8dp"
            android:layout_height="49.2dp"
            android:background="@drawable/button_touch" />

        <TextView
            android:id="@+id/tag_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="center"
            android:text="@string/dashboard"
            android:textColor="#000000"
            android:textSize="18sp" />

        <Button
            android:id="@+id/settings"
            style="@style/defaultButton"
            android:layout_width="64.8dp"
            android:layout_height="49.2dp"
            android:background="@drawable/button_more" />

    </LinearLayout>

    <TextView
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:gravity="center"
        android:paddingBottom="50dp"
        android:text="@string/empty_dashboard"
        android:textColor="#A3A3A3"
        android:textSize="20sp"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingLeft="@dimen/tile_padding"
        android:paddingTop="@dimen/tile_padding"
        android:paddingRight="@dimen/tile_padding" />

    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:visibility="gone">

        <Button
            android:id="@+id/add"
            style="@style/defaultButton"
            android:layout_width="52.8dp"
            android:layout_height="49.2dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/button_add" />

        <Button
            android:id="@+id/remove"
            style="@style/defaultButton"
            android:layout_width="52.8dp"
            android:layout_height="49.2dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/button_remove" />

        <Button
            android:id="@+id/swap"
            style="@style/defaultButton"
            android:layout_width="52.8dp"
            android:layout_height="49.2dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/button_swap" />

        <Button
            android:id="@+id/edit"
            style="@style/defaultButton"
            android:layout_width="52.8dp"
            android:layout_height="49.2dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/button_edit" />

    </LinearLayout>
</LinearLayout>