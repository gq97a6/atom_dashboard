<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="@dimen/layout_padding"
    android:paddingEnd="@dimen/layout_padding"
    android:paddingBottom="100dp"
    tools:context=".dashboard_settings_activity.DashboardSettingsActivity">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="@string/dashboard_settings_banner"
        android:textColor="@color/dark_gray"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/warning_span"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="@string/dashboard_settings_span_warning"
        android:textColor="@color/gray"
        android:textSize="13sp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="10dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/dashboard_settings_slider_span"
            android:textColor="@color/dark_gray"
            android:textSize="15sp" />

        <com.google.android.material.slider.Slider
            android:id="@+id/span"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:stepSize="1"
            android:valueFrom="1"
            android:valueTo="6"

            app:thumbColor="@color/slider_thumbColor"
            app:tickColorActive="@color/slider_tickColorActive"
            app:tickColorInactive="@color/slider_tickColorInactive"
            app:trackColorActive="@color/slider_trackColorActive"
            app:trackColorInactive="@color/slider_trackColorInactive" />

        <Button
            android:id="@+id/button_apply_span"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="@string/dashboard_settings_button_apply"
            android:textSize="12sp"
            android:visibility="gone"/>

    </LinearLayout>
</LinearLayout>