<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.netDashboard">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/icon_main"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/icon_main"
        android:supportsRtl="true"
        android:theme="@style/Theme.App">

        <activity android:name=".SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".main_activity.MainActivity" />
        <activity android:name="com.netDashboard.main_activity.dashboard_activity.dashboard_settings_activity.DashboardSettingsActivity" />
        <activity android:name="com.netDashboard.main_activity.dashboard_activity.DashboardActivity" />
        <activity android:name="com.netDashboard.main_activity.dashboard_activity.new_tile_activity.NewTileActivity" />
        <activity android:name="com.netDashboard.main_activity.dashboard_activity.new_tile_activity.config_new_tile_activity.ConfigNewTileActivity" />

        <service android:name=".abyss.Abyss" android:enabled="true" />
        <service android:name="org.eclipse.paho.android.service.MqttService" />
    </application>

</manifest>