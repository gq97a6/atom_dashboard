<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:elevation="10dp"
    android:padding="@dimen/tile_padding">

    <ImageView
        android:id="@+id/swapReady"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/icon_swap_flag"
        android:backgroundTint="#FFFFFF"
        android:elevation="10dp"
        android:visibility="invisible"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#000000"
        tools:ignore="ContentDescription" />

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:stepSize="10.0"
        android:value="0"
        android:valueFrom="0.0"
        android:valueTo="100.0"

        app:thumbColor="@color/slider_thumbColor"
        app:tickColorActive="@color/slider_tickColorActive"
        app:tickColorInactive="@color/slider_tickColorInactive"
        app:trackColorActive="@color/slider_trackColorActive"
        app:trackColorInactive="@color/slider_trackColorInactive" />

</FrameLayout>